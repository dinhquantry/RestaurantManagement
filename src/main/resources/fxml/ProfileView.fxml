<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.qlnh.quanlynhahang.controller.ProfileController">
    <children>
        <VBox alignment="TOP_CENTER" spacing="20.0" style="-fx-background-color: white;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="30.0" left="100.0" right="100.0" top="30.0" />
            </padding>
            <children>
                <Label text="THÔNG TIN CÁ NHÂN" textFill="#2c3e50">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>

                <HBox alignment="CENTER" prefHeight="483.0" prefWidth="723.0" spacing="40.0">
                    <!-- Cột Trái: Avatar -->
                    <VBox alignment="TOP_CENTER" spacing="15.0">
                        <children>
                            <ImageView fx:id="imgAvatar" fitHeight="187.0" fitWidth="321.0" pickOnBounds="true" preserveRatio="true" style="-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 0);" />
                            <Button mnemonicParsing="false" onAction="#handleUploadAvatar" text="Đổi ảnh đại diện" />
                        </children>
                    </VBox>

                    <!-- Cột Phải: Form thông tin -->
                    <VBox maxWidth="400.0" prefHeight="483.0" prefWidth="387.0" spacing="15.0" HBox.hgrow="ALWAYS">
                        <children>
                            <VBox spacing="5.0">
                                <Label text="Họ và tên (Không thể sửa):" textFill="#7f8c8d" />
                                <TextField fx:id="txtFullName" disable="true" style="-fx-opacity: 1;" />
                            </VBox>

                            <VBox spacing="5.0">
                                <Label text="Tên đăng nhập:" textFill="#7f8c8d" />
                                <TextField fx:id="txtUsername" disable="true" style="-fx-opacity: 1;" />
                            </VBox>

                            <VBox spacing="5.0">
                                <Label text="Chức vụ:" textFill="#7f8c8d" />
                                <TextField fx:id="txtRole" disable="true" style="-fx-opacity: 1;" />
                            </VBox>

                            <VBox spacing="5.0">
                                <Label text="Số điện thoại:" />
                                <TextField fx:id="txtPhone" promptText="Nhập số điện thoại liên hệ" />
                            </VBox>

                            <Label text="--- Đổi mật khẩu (Bỏ trống nếu không đổi) ---" textFill="#e67e22">
                                <font>
                                    <Font name="System Italic" size="12.0" />
                                </font>
                                <VBox.margin>
                                    <Insets top="10.0" />
                                </VBox.margin>
                            </Label>

                            <VBox spacing="5.0">
                                <Label text="Mật khẩu mới:" />
                                <PasswordField fx:id="txtNewPass" promptText="Nhập mật khẩu mới" />
                            </VBox>

                            <VBox spacing="5.0">
                                <Label text="Xác nhận mật khẩu:" />
                                <PasswordField fx:id="txtConfirmPass" promptText="Nhập lại mật khẩu mới" />
                            </VBox>

                            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleSave" prefHeight="40.0" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold;" text="LƯU THAY ĐỔI">
                                <VBox.margin>
                                    <Insets top="20.0" />
                                </VBox.margin>
                            </Button>
                        </children>
                    </VBox>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
