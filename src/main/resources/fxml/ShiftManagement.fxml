<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.qlnh.quanlynhahang.controller.ShiftManagementController">
    <children>
        <HBox spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <!-- FORM PHÂN CA (Bên Trái) -->
                <VBox fx:id="formBox" spacing="15.0" style="-fx-background-color: #f8f9fa; -fx-padding: 15; -fx-border-color: #bdc3c7;">
                    <children>
                        <Label text="PHÂN CA LÀM VIỆC" textFill="#2c3e50">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>

                        <VBox spacing="5.0">
                            <Label text="Chọn nhân viên:" />
                            <ComboBox fx:id="cbStaff" maxWidth="1.7976931348623157E308" />
                        </VBox>

                        <VBox spacing="5.0">
                            <Label text="Ngày làm việc:" />
                            <DatePicker fx:id="dpDate" maxWidth="1.7976931348623157E308" />
                        </VBox>

                        <VBox spacing="5.0">
                            <Label text="Ca trực:" />
                            <ComboBox fx:id="cbShiftName" editable="true" maxWidth="1.7976931348623157E308" promptText="Sáng / Chiều / Tối" />
                        </VBox>

                        <VBox spacing="5.0">
                            <Label text="Ghi chú:" />
                            <TextField fx:id="txtNote" />
                        </VBox>

                        <HBox spacing="10.0" alignment="CENTER">
                            <Button text="Thêm Lịch" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" onAction="#handleAdd" prefWidth="100.0"/>
                            <Button text="Xóa" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" onAction="#handleDelete" prefWidth="60.0"/>
                        </HBox>
                    </children>
                    <prefWidth>280.0</prefWidth>
                </VBox>

                <!-- BẢNG LỊCH LÀM VIỆC (Bên Phải) -->
                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="BẢNG THEO DÕI CA LÀM">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                        <TableView fx:id="tblShifts" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colDate" prefWidth="100.0" text="Ngày" />
                                <TableColumn fx:id="colStaff" prefWidth="180.0" text="Nhân viên" />
                                <TableColumn fx:id="colShiftName" prefWidth="150.0" text="Ca trực" />
                                <TableColumn fx:id="colNote" prefWidth="150.0" text="Ghi chú" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</AnchorPane>