<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.qlnh.quanlynhahang.controller.ReportController">
    <children>
        <VBox spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <HBox alignment="CENTER_LEFT" spacing="20.0">
                    <children>
                        <Label text="BÁO CÁO DOANH THU" textFill="#2c3e50">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>

                        <!-- THANH CÔNG CỤ LỌC -->
                        <HBox alignment="CENTER_RIGHT" spacing="10.0" HBox.hgrow="ALWAYS">
                            <children>
                                <VBox>
                                    <Label text="Từ ngày:" textFill="#7f8c8d">
                                        <font><Font size="10.0"/></font>
                                    </Label>
                                    <DatePicker fx:id="dpFrom" prefWidth="110.0" />
                                </VBox>

                                <VBox>
                                    <Label text="Đến ngày:" textFill="#7f8c8d">
                                        <font><Font size="10.0"/></font>
                                    </Label>
                                    <DatePicker fx:id="dpTo" prefWidth="110.0" />
                                </VBox>

                                <VBox>
                                    <Label text="Gom nhóm theo:" textFill="#7f8c8d">
                                        <font><Font size="10.0"/></font>
                                    </Label>
                                    <ComboBox fx:id="cbReportType" prefWidth="100.0" />
                                </VBox>

                                <Button mnemonicParsing="false" onAction="#handleReload" prefHeight="30.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" text="Thống kê">
                                    <VBox.margin>
                                        <Insets top="15.0" />
                                    </VBox.margin>
                                </Button>

                                <!-- NÚT XUẤT BÁO CÁO MỚI -->
                                <Button mnemonicParsing="false" onAction="#handleExport" prefHeight="30.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;" text="Xuất Excel">
                                    <VBox.margin>
                                        <Insets top="15.0" />
                                    </VBox.margin>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                </HBox>

                <HBox spacing="20.0" style="-fx-background-color: #ecf0f1; -fx-padding: 15; -fx-background-radius: 5;">
                    <children>
                        <VBox>
                            <children>
                                <Label text="Tổng doanh thu trong khoảng này:" textFill="#7f8c8d">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Label>
                                <Label fx:id="lblTotalRevenue" text="0 VND" textFill="#27ae60">
                                    <font>
                                        <Font name="System Bold" size="28.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <BarChart fx:id="barChart" title="Biểu đồ doanh thu" VBox.vgrow="ALWAYS">
                    <xAxis>
                        <CategoryAxis fx:id="xAxis" label="Thời gian" side="BOTTOM" />
                    </xAxis>
                    <yAxis>
                        <NumberAxis label="Doanh thu (VND)" side="LEFT" />
                    </yAxis>
                </BarChart>
            </children>
        </VBox>
    </children>
</AnchorPane>