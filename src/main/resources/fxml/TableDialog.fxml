<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="350.0" prefWidth="400.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.qlnh.quanlynhahang.controller.TableDialogController">
    <children>
        <VBox spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Label fx:id="lblTitle" text="THÊM BÀN MỚI" textFill="#2c3e50">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>

                <VBox spacing="5.0">
                    <Label text="Tên bàn:" />
                    <TextField fx:id="txtName" promptText="Ví dụ: Bàn 1.05" />
                </VBox>

                <VBox spacing="5.0">
                    <Label text="Số ghế (Sức chứa):" />
                    <TextField fx:id="txtCapacity" promptText="Ví dụ: 4" />
                </VBox>

                <VBox spacing="5.0">
                    <Label text="Vị trí (Tầng):" />
                    <ComboBox fx:id="cbFloor" maxWidth="1.7976931348623157E308" />
                </VBox>

                <HBox alignment="CENTER_RIGHT" spacing="10.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Button cancelButton="true" onAction="#handleCancel" text="Hủy bỏ" />
                        <Button defaultButton="true" onAction="#handleSave" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold;" text="Lưu thông tin" />
                    </children>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>