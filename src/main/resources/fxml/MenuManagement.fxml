<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.qlnh.quanlynhahang.controller.MenuManagementController">
    <children>
        <VBox spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <!-- THANH CÔNG CỤ -->
                <HBox alignment="CENTER_LEFT" spacing="20.0">
                    <children>
                        <Label text="QUẢN LÝ THỰC ĐƠN" textFill="#2c3e50">
                            <font>
                                <Font name="System Bold" size="20.0" />
                            </font>
                        </Label>
                        <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                            <children>
                                <Button mnemonicParsing="false" onAction="#handleAddNew" prefHeight="35.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" text="+ THÊM MÓN MỚI" />
                            </children>
                        </HBox>
                    </children>
                </HBox>

                <!-- BẢNG DỮ LIỆU -->
                <TableView fx:id="tblFoods" VBox.vgrow="ALWAYS">
                    <columns>
                        <!-- Cột STT (Thay cho ID) -->
                        <TableColumn fx:id="colSTT" prefWidth="50.0" style="-fx-alignment: CENTER;" text="STT" />
                        <TableColumn fx:id="colName" prefWidth="250.0" text="Tên món" />
                        <TableColumn fx:id="colPrice" prefWidth="120.0" style="-fx-alignment: CENTER-RIGHT;" text="Giá (VNĐ)" />
                        <TableColumn fx:id="colCategory" prefWidth="120.0" style="-fx-alignment: CENTER;" text="Danh mục" />
                        <TableColumn fx:id="colStatus" prefWidth="120.0" style="-fx-alignment: CENTER;" text="Trạng thái" />
                        <!-- Cột Hành động (Sửa/Xóa) -->
                        <TableColumn fx:id="colAction" prefWidth="150.0" style="-fx-alignment: CENTER;" text="Hành động" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane>