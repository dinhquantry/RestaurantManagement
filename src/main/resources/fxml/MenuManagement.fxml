<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.qlnh.quanlynhahang.controller.MenuManagementController">
    <children>
        <HBox spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <!-- FORM NHẬP LIỆU (Bên Trái) -->
                <VBox spacing="15.0" style="-fx-background-color: #f8f9fa; -fx-padding: 15; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;">
                    <children>
                        <Label text="THÔNG TIN MÓN ĂN" textFill="#2c3e50">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>

                        <VBox spacing="5.0">
                            <Label text="Tên món:" />
                            <TextField fx:id="txtName" promptText="Ví dụ: Bò Bít Tết" />
                        </VBox>

                        <VBox spacing="5.0">
                            <Label text="Giá bán (VNĐ):" />
                            <TextField fx:id="txtPrice" promptText="Ví dụ: 150000" />
                        </VBox>

                        <VBox spacing="5.0">
                            <Label text="Danh mục:" />
                            <ComboBox fx:id="cbCategory" maxWidth="1.7976931348623157E308" prefWidth="150.0" />
                        </VBox>

                        <VBox spacing="5.0">
                            <Label text="Trạng thái:" />
                            <ComboBox fx:id="cbStatus" maxWidth="1.7976931348623157E308" prefWidth="150.0" />
                        </VBox>

                        <VBox spacing="5.0" alignment="CENTER">
                            <Label text="Hình ảnh:" maxWidth="1.7976931348623157E308"/>
                            <ImageView fx:id="imgPreview" fitHeight="120.0" fitWidth="180.0" pickOnBounds="true" preserveRatio="true" style="-fx-border-color: gray;" />
                            <Button fx:id="btnUpload" text="Chọn ảnh..." onAction="#handleUploadImage" />
                        </VBox>

                        <HBox spacing="10.0" alignment="CENTER">
                            <Button fx:id="btnAdd" text="Thêm" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" onAction="#handleAdd" prefWidth="60.0"/>
                            <Button fx:id="btnUpdate" text="Sửa" style="-fx-background-color: #f39c12; -fx-text-fill: white;" onAction="#handleUpdate" prefWidth="60.0"/>
                            <Button fx:id="btnDelete" text="Xóa" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" onAction="#handleDelete" prefWidth="60.0"/>
                            <Button fx:id="btnClear" text="Mới" onAction="#handleClear" prefWidth="60.0"/>
                        </HBox>
                    </children>
                    <prefWidth>300.0</prefWidth>
                </VBox>

                <!-- DANH SÁCH MÓN ĂN (Bên Phải) -->
                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="DANH SÁCH THỰC ĐƠN">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                        <TableView fx:id="tblFoods" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                                <TableColumn fx:id="colName" prefWidth="150.0" text="Tên món" />
                                <TableColumn fx:id="colPrice" prefWidth="100.0" text="Giá" />
                                <TableColumn fx:id="colCategory" prefWidth="100.0" text="Danh mục" />
                                <TableColumn fx:id="colStatus" prefWidth="100.0" text="Trạng thái" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</AnchorPane>