<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.qlnh.quanlynhahang.controller.ToolController">
    <children>
        <HBox spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <!-- FORM NHẬP LIỆU (BÊN TRÁI) -->
                <VBox spacing="15.0" style="-fx-background-color: #f8f9fa; -fx-padding: 15; -fx-background-radius: 5; -fx-border-color: #bdc3c7;">
                    <children>
                        <Label text="QUẢN LÝ DỤNG CỤ" textFill="#2c3e50">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>

                        <VBox spacing="5.0">
                            <Label text="Tên dụng cụ:" />
                            <TextField fx:id="txtName" promptText="Ví dụ: Đĩa tròn" />
                        </VBox>

                        <VBox spacing="5.0">
                            <Label text="Số lượng tồn:" />
                            <TextField fx:id="txtQuantity" promptText="0" />
                        </VBox>

                        <VBox spacing="5.0">
                            <Label text="Mức cảnh báo tối thiểu:" />
                            <TextField fx:id="txtThreshold" promptText="10" />
                            <Label text="(Hệ thống sẽ báo đỏ nếu SL dưới mức này)" textFill="#7f8c8d" wrapText="true">
                                <font>
                                    <Font size="10.0" />
                                </font>
                            </Label>
                        </VBox>

                        <HBox spacing="10.0" alignment="CENTER">
                            <Button text="Thêm" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" onAction="#handleAdd" prefWidth="60.0"/>
                            <Button text="Sửa" style="-fx-background-color: #f39c12; -fx-text-fill: white;" onAction="#handleUpdate" prefWidth="60.0"/>
                            <Button text="Xóa" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" onAction="#handleDelete" prefWidth="60.0"/>
                            <Button text="Mới" onAction="#handleClear" prefWidth="60.0"/>
                        </HBox>
                    </children>
                    <prefWidth>300.0</prefWidth>
                </VBox>

                <!-- BẢNG DỮ LIỆU (BÊN PHẢI) -->
                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="DANH SÁCH DỤNG CỤ TRONG KHO">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                        <TableView fx:id="tblTools" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colName" prefWidth="200.0" text="Tên Dụng cụ" />
                                <TableColumn fx:id="colQuantity" prefWidth="100.0" style="-fx-alignment: CENTER;" text="Số lượng" />
                                <TableColumn fx:id="colStatus" prefWidth="200.0" text="Trạng thái" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</AnchorPane>