<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.qlnh.quanlynhahang.controller.ToolController">
    <children>
        <Label text="QUẢN LÝ DỤNG CỤ" textFill="#2c3e50">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>
        <Label text="Các dòng màu đỏ là dụng cụ sắp hết cần bổ sung ngay." textFill="#e74c3c">
            <font>
                <Font name="System Italic" size="12.0" />
            </font>
        </Label>
        <TableView fx:id="tblTools" prefHeight="400.0" prefWidth="600.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colName" prefWidth="250.0" text="Tên Dụng cụ" />
                <TableColumn fx:id="colQuantity" prefWidth="100.0" style="-fx-alignment: CENTER;" text="Số lượng tồn" />
                <TableColumn fx:id="colStatus" prefWidth="200.0" text="Trạng thái" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>