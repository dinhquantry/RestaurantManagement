<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.qlnh.quanlynhahang.controller.TableMapController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: #ecf0f1; -fx-padding: 10;">
            <children>
                <Label text="SƠ ĐỒ BÀN ĂN" textFill="#2c3e50">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>

                <!-- Khu vực lọc tầng -->
                <Label text="Chọn tầng:" textFill="#7f8c8d">
                    <HBox.margin>
                        <Insets left="20.0" />
                    </HBox.margin>
                </Label>
                <ComboBox fx:id="cbFloor" onAction="#handleFilterFloor" prefWidth="100.0" />

                <!-- Nút Thêm bàn (Chỉ hiện cho Admin nếu muốn) -->
                <Button fx:id="btnAddTable" mnemonicParsing="false" onAction="#handleAddTable" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold;" text="+ Thêm Bàn" />

                <!-- Chú thích màu sắc -->
                <HBox alignment="CENTER_RIGHT" spacing="10.0" HBox.hgrow="ALWAYS">
                    <Label style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-padding: 3 8;" text="TRỐNG" />
                    <Label style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-padding: 3 8;" text="CÓ KHÁCH" />
                    <Label style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-padding: 3 8;" text="ĐẶT TRƯỚC" />
                </HBox>
            </children>
        </HBox>
    </top>
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <content>
                <FlowPane fx:id="tableContainer" hgap="20.0" vgap="20.0">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                </FlowPane>
            </content>
        </ScrollPane>
    </center>
</BorderPane>